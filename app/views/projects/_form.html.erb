<header>
  <h1>Projects</h1>
  <ul class="actions">
    <li><%= link_to "New Project", new_project_path, class: "new" %></li>
  </ul>
</header>

<%= simple_form_for(project) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.button :submit, class: "btn-primary" %>
<% end %>